@using ETicaret.Entity
@model Brand
@{
    ViewBag.Title = "EditBrand";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit Brand</h2>

<form action="~/Admin/Brand/EditBrand" method="post" enctype="multipart/form-data">
    @* Dosya işlemlerini gerçekleştirebilmek için enctype attiributeunu tanımlamamız lazım. *@
    @Html.AntiForgeryToken()
    <input type="hidden" name="BrandId" value="@Model.BrandID" />
    <input type="hidden" name="Photo" value="@Model.Photo" />

    <div class="form-group" style="width:300px">
        <label>Brand Name</label>
        <input type="text" name="BrandName" class="form-control" value="@Model.BrandName" />
    </div>
    <div class="form-group" style="width:300px">
        <label>Brand Description</label>
        <input type="text" name="Description" class="form-control" value="@Model.Description" />
    </div>
    <div class="form-group" style="width:300px">
        <label>Brand Photo</label>
        <img src="~/Images/@Model.Photo" width="75" height="75" />
        <input type="file" name="Photo" />
    </div>
    <button class="btn btn-primary" type="submit">Update</button>
</form>