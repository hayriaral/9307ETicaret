
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Add Category</h2>
<div>
    <label> @ViewBag.basarili </label>
</div>
<form action="~/Admin/Category/AddCategory" method="post">
    <div style="width:300px">
        <label>Category Name: </label>
        <input type="text" name="CategoryName" placeholder="Enter category name" class="form-control" />
    </div>
    <div style="width:300px">
        <label>Description:</label>
        <input type="text" name="Description" placeholder="Enter Description" class="form-control" />
    </div>
    <div>
        <br />
        <button class="btn btn-primary" type="submit">Add Category</button>
    </div>
    
</form>

