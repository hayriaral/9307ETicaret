@using ETicaret.Entity
@model List<Category>

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Category List</h2>
<div class="text-info">
    @ViewBag.silmeMesajı
</div>
<table class="table table-condensed table-hover">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Description</th>
            <th>Crated Date</th>
            <th>Edit & Delete</th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (Category item in Model)
        {
            <tr>
                <td>@item.CategoryID</td>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td>@item.CreatedDate</td>
                <td>
                    <a href="~/Admin/Category/EditCategory/@item.CategoryID">Edit</a>
                    <a href="~/Admin/Category/DeleteCategory/@item.CategoryID">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>
