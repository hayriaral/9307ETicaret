@using ETicaret.Entity
@model List<Product>

<div class="center_title_bar">Latest Products</div>
@foreach (Product item in Model)
{
    <div class="prod_box">
        <div class="top_prod_box"></div>
        <div class="center_prod_box">
            <div class="product_title">
                <a href="~/Home/Detail/@item.ProductID">@item.ProductName</a>
            </div>
            <div class="product_img">
                <a href="~/Home/Detail/@item.ProductID">
                <img src="~/Images/@item.Photo" alt="" border="0" width="100" height="100" /></a>
            </div>
            <div class="prod_price"><span class="reduce">350$</span> <span class="price">@item.Price ₺</span>
            </div>
        </div>
        <div class="bottom_prod_box"></div>
        <div class="prod_details_tab"> 
        <a href="~/Order/AddOrder/@item.ProductID" title="header=[Add to cart] body=[&nbsp;] fade=[on]">
            <img src="~/Content/electronix/images/cart.gif" alt="" border="0" class="left_bt" /></a> 
        @*<a href="#" title="header=[Specials] body=[&nbsp;] fade=[on]"><img src="images/favs.gif" alt="" border="0" class="left_bt" /></a> 
        <a href="#" title="header=[Gifts] body=[&nbsp;] fade=[on]"><img src="images/favorites.gif" alt="" border="0" class="left_bt" /></a>*@ 
        <a href="~/Home/Detail/@item.ProductID" class="prod_details">details</a> 
        </div>
    </div>
}
