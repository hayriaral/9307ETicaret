
@{
    ViewBag.Title = "DetailPage";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@using ETicaret.Entity
@model ICollection<OrderDetail>

<h2>DetailPage</h2>

<table class="table table-responsive table-hover">
    <thead>
        <tr>
            <th>OrderID</th>
            <th>ProductName</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Change Quantity</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (OrderDetail item in Model)
        {
            <tr>
                <td>@item.OrderID</td>
                <th>@item.Product.ProductName</th>
                <th>@item.Quantitiy</th>
                <th>@item.Price</th>
                <td>
                    <a href="~/Order/QuantityArttir/@item.ProductID" class="btn btn-success">Arttır</a>
                    <a href="~/Order/QuantityAzalt/@item.ProductID" class="btn btn-danger">Azalt</a>
                </td>
                <td>
                    <a href="~/Order/Delete/@item.ProductID">Delete</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="6">
                @{ 
                    Order sepetim = (Order)Session["Order"];
                    <span> Total: </span> @sepetim.TotalPrice @:₺
                }
            </td>
        </tr>
    </tbody>
</table>
<a href="~/Payment/Pay" class="btn btn-success">Ödeme Adımı</a>

